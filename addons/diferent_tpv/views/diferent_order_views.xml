<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Order List View -->
        <record id="view_diferent_order_list" model="ir.ui.view">
            <field name="name">diferent.order.list</field>
            <field name="model">diferent.order</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="table_id"/>
                    <field name="room_id"/>
                    <field name="waiter_id"/>
                    <field name="state"/>
                    <field name="amount_total"/>
                    <field name="order_date"/>
                </list>
            </field>
        </record>

        <!-- Order Form View -->
        <record id="view_diferent_order_form" model="ir.ui.view">
            <field name="name">diferent.order.form</field>
            <field name="model">diferent.order</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" string="Confirm Order" 
                                type="object" class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button name="action_to_kitchen" string="Send to Kitchen" 
                                type="object" class="btn-warning"
                                invisible="state != 'confirmed'"/>
                        <button name="action_ready" string="Ready to Serve" 
                                type="object" class="btn-info"
                                invisible="state != 'kitchen'"/>
                        <button name="action_served" string="Served" 
                                type="object" class="btn-success"
                                invisible="state != 'ready'"/>
                        <button name="action_close" string="Close &amp; Pay" 
                                type="object" class="btn-primary"
                                invisible="state != 'served'"/>
                        <button name="action_cancel" string="Cancel" 
                                type="object" class="btn-secondary"
                                invisible="state not in ['draft','confirmed']"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,confirmed,kitchen,ready,served,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="table_id"/>
                                <field name="room_id"/>
                                <field name="waiter_id"/>
                                <field name="customer_count"/>
                            </group>
                            <group>
                                <field name="order_date"/>
                                <field name="kitchen_date"/>
                                <field name="ready_date"/>
                                <field name="served_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Order Lines">
                                <field name="line_ids">
                                    <list editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="subtotal"/>
                                        <field name="available_stock"/>
                                        <field name="kitchen_state"/>
                                        <field name="notes"/>
                                    </list>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="amount_untaxed"/>
                                    <field name="amount_tax"/>
                                    <div class="oe_subtotal_footer_separator oe_inline">
                                        <label for="amount_total"/>
                                    </div>
                                    <field name="amount_total" class="oe_subtotal_footer_separator"/>
                                </group>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Order Action -->
        <record id="action_diferent_order" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="res_model">diferent.order</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No orders yet!
                </p>
                <p>
                    Orders are created when you open a table.
                    Start by opening a table to create your first order.
                </p>
            </field>
        </record>
    </data>
</odoo>